@model HomeBudget.WebApplication.Models.GeneralReportViewModel
@{
    ViewBag.Title = "General";
}
<h2>Widok ogólny</h2>
@using (Html.BeginForm("General", "Reports", new { }, FormMethod.Post, new { @id = "", @class = "form-inline", @role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DateReport, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateReport, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateReport, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-default">Wybier</button>
}
@if (Model.AnyCashOperation)
{
    <p>łaczny przychod: @Model.Revenues</p>
    <p>łączne wydatki: @Model.Expenses</p>
    <p>Bilans: @(@Model.Revenues - @Model.Expenses)</p>
}
