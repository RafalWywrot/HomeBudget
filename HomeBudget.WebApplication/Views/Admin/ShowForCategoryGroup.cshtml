@model List<HomeBudget.Database.Category>
@{
    ViewBag.Title = "ShowForCategoryGroup";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_CategoryOptions", Model.FirstOrDefault())
    </div>
    <div class="col-md-9">
        <h5 class="my-3">
            <a class="btn btn-success btn-lg" style="margin-left: 15px;" href="@Url.Action("AddCategory","Admin", new { isExpense = Model.FirstOrDefault().IsExpense })">Dodaj</a>
        </h5>
        <div class="col-md-4">
            <table class="table margin-top20">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nazwa</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@Model[i].Name</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>




