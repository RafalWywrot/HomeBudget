@model HomeBudget.WebApplication.Models.TimeRangeReportViewModel
@{
    ViewBag.Title = "General";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.css" rel="stylesheet">
<link href="~/Content/style.css" rel="stylesheet">

<div class="row reports">
    <div class="col-xl-3">
        @Html.Partial("_ReportsOptions")
    </div>
    <div class="col-xl-9">
        <div class="row">
            <div class="col-xl-12">
                <h3 class="col-xl-6">Raport z danego okresu</h3>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("TimeRange", "Admin", FormMethod.Post, new { @class = "form-inline", @role = "form" }))
            {
                <div class="form-group col-xl-5">
                    <label class="col-xl-1 control-label pad-left0" for="DateFrom" style="margin-top: 7px;">Od</label>
                    <div class="col-xl-10">
                        @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control date-picker", @placeholder = "Wybierz date" } })
                        @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-xl-5">
                    <label class="col-xl-1 control-label pad-left0" for="DateTo" style="margin-top: 7px;">Do</label>
                    <div class="col-xl-10">
                        @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control date-picker", @placeholder = "Wybierz date" } })
                        @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="col-xl-2 btn btn-default">Wybierz</button>
            }
        </div>
        @if (Model.AnyCashOperation)
        {
            @Html.Partial("_DetailedReportResult")
        }
        else
        {
            <div class="alert alert-warning margin-top20" role="alert">
                W tym okresie czasu nie odnotowano żadnych operacji finansowych
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryUI")
    <script type="text/javascript">
        $.datepicker.setDefaults($.datepicker.regional['pl']);
        $(document).ready(function () {
            $('.date-picker').datepicker({
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                dateFormat: 'dd.mm.yy',
            });
        });
    </script>
}



