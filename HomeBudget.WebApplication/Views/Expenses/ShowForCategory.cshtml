@model IEnumerable<HomeBudget.WebApplication.Models.RevenueViewModel>
<div class="margin-top20">
    <a class="btn btn-success btn-lg" href="@Url.Action("Add","Expenses", new { categoryId = ViewBag.CategoryId })">Dodaj</a>
    <table class="table margin-top20">
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.TimeEvent)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.CreateDateTimeDatabase)
            </th>
            <th></th>
            <th></th>
        </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Price)
                    <span> zł</span>
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.TimeEvent)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CreateDateTimeDatabase)
                </td>
                <td class="col-md-1">
                    @using (Html.BeginForm("Edit", "Expenses", new { id = item.Id }, FormMethod.Get, new { @class = "" }))
                    {
                        <input type="submit" value="Edytuj" class="btn btn-default" />
                    }
                </td>
                <td class="col-md-1">
                    @using (Html.BeginForm("Delete", "Expenses", new { id = item.Id }, FormMethod.Post, new { @class = "" }))
                    {
                        <input type="submit" value="Usuń" class="btn btn-danger" />
                    }
                </td>
            </tr>
        }
    </table>
    @if (Model.Count() != 0)
    {
        <div class="form-group margin-top20 financeSum">
            <label class="control-label">Łączny wydatek: </label>
            <label class="text-danger">@Model.Select(x => x.Price).Sum() zł</label>
        </div>
    }
</div>