@model List<HomeBudget.Database.Category>
@{
    ViewBag.Title = "Index";
    string[] categoryGlyphicons = { "glyphicon-euro", "glyphicon-lock", "glyphicon-book", "glyphicon-th" };
}

<div class="row">
    <div class="col-md-3">
        <h1 class="my-4">Kategorie przychodow</h1>
        <div class="list-group">
            @for (var i = 0; i < Model.Count(); i++)
            {
                <a class="list-group-item" href="@Url.Action("ShowForCategory","Revenues", new { categoryId = Model[i].Id })">
                    <span class="glyphicon @categoryGlyphicons[i]"></span>
                    <span class="margin-top20">@Model[i].Name</span>
                </a>
            }
        </div>
    </div>
