@model List<HomeBudget.Database.Category>
@{
    ViewBag.Title = "Index";
    string[] categoryGlyphicons = { "glyphicon-asterisk", "glyphicon-th-list", "glyphicon-plane", "glyphicon-circle-arrow-up" };
    string[] categoryColors = { "bg-success", "bg-info", "bg-danger", "bg-warning" };
}
<div class="col-md-12">
    <h2>Kategorie przychodów</h2>
</div>
<div class="row">
    <div class="col-md-12 categories">
        @for (var i = 0;  i < Model.Count(); i++)
        {
            <div class="col-md-3 categoryBox ">
                <div class="categoryView">
                    <a href="@Url.Action("ShowForCategory","Revenues", new { categoryId = Model[i].Id })">
                        <span class="glyphicon @categoryGlyphicons[i]"></span>@Model[i].Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>
