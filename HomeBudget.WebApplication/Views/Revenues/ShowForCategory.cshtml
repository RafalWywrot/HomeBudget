@model IEnumerable<HomeBudget.WebApplication.Models.RevenueViewModel>
<div class="margin-top20">
    <a class="btn btn-success btn-lg" href="@Url.Action("Add","Revenues", new { categoryId = ViewBag.CategoryId })">Dodaj</a>
    <table class="table margin-top20">
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.TimeEvent)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.CreateDateTimeDatabase)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.TimeEvent)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CreateDateTimeDatabase)
                </td>
                <td class="col-md-1">
                    @using (Html.BeginForm("Edit", "Revenues", new { id = item.Id }, FormMethod.Get, new { @class = "" }))
                    {
                        <input type="submit" value="Edytuj" class="btn btn-default" />
                    }
                </td>
                <td class="col-md-1">
                    @using (Html.BeginForm("Delete", "Revenues", new { id = item.Id }, FormMethod.Post, new { @class = "" }))
                    {
                        <input type="submit" value="Usuń" class="btn btn-danger" />
                    }
                 </td>
                    
                   
            </tr>
        }
    </table>
</div>