@model IEnumerable<HomeBudget.WebApplication.Models.RevenueViewModel>
<div class="margin-top20">
    <a class="btn btn-success" href="@Url.Action("Add","Revenues", new { categoryId = ViewBag.CategoryId })">Dodaj przychód</a>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @using (Html.BeginForm("Edit", "Revenues", new { id = item.Id }, FormMethod.Get, new { @class = "col-md-2" }))
                    {
                        <input type="submit" value="Edit" class="btn btn-default" />
                    }
                    @using (Html.BeginForm("Delete", "Revenues", new { id = item.Id }, FormMethod.Post, new { @class = "col-md-2" }))
                    {
                        <input type="submit" value="delete" class="btn btn-danger" />
                    }
                </td>
            </tr>
        }
    </table>
</div>